#!/usr/bin/env bash

devices=$(xinput list | grep pointer | sed 's/.*id=\([0-9]\+\).*/\1/')
scale="1"

while read device; do
  if xinput list-props "$device" | grep --silent "Device Accel Profile"; then
    xinput set-prop "$device" "Device Accel Profile" -1 # Disabled
    xinput set-prop "$device" "Device Accel Constant Deceleration" "$scale"
  fi
done <<< "$devices"
